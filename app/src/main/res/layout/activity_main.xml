<?xml version="1.0" encoding="utf-8"?>
<TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        tools:context=".MainActivity">


    <TableRow
            android:gravity="center_vertical"
            android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button
                android:text="Football"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/football"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/football_desc"/>
    </TableRow>
    <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/math" android:text="Math"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/math_desc"/>
    </TableRow>
    <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button
                android:text="Physics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/physics"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/physics_desc"/>
    </TableRow>
    <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button
                android:text="Marvel Superheroes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/marvel_superheroes"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/marvel_superheroes_desc"/>
    </TableRow>

</TableLayout>