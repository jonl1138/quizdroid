<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".AirplaneRedirect" android:id="@+id/frameLayout">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:text="Yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/yes"
                app:layout_constraintEnd_toStartOf="@+id/no"
                android:layout_marginEnd="120dp" android:layout_marginRight="120dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="56dp"
                android:layout_marginStart="56dp" android:layout_marginBottom="284dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="1.0"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/question_display"
                app:layout_constraintVertical_bias="1.0"/>
        <Button
                android:text="No"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/no"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="56dp"
                android:layout_marginRight="56dp" android:layout_marginBottom="284dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/question_display" app:layout_constraintVertical_bias="1.0"/>
        <TextView
                android:text="Would you like to turn on airplane mode?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/question_display" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.199"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.5"/>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>